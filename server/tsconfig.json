{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "**/*.ts",
    "db/migrations/*.js",
    "config/**/*.json",
    "services/emailTemplates/*.html"
  ]
}
